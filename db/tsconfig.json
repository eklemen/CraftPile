{
  "compilerOptions": {
    "target": "es2017",
    "noImplicitAny": false,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node"],
    "baseUrl": "./models",
    "outDir": "./dist"
  },
  "include": ["./models"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
